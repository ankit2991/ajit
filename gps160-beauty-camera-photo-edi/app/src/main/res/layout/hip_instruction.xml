<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="20.0dip"
    android:layout_marginRight="20.0dip"
    android:background="@color/tools_background_color"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10.0dip">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@id/boobs"
                android:layout_width="300.0dip"
                android:layout_height="250.0dip"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:src="@drawable/hip_instruction" />

            <com.lockerroom.face.filters.DegreeSeekBar
                android:id="@id/control"
                android:layout_width="wrap_content"
                android:layout_height="30.0dip"
                android:layout_below="@id/boobs"
                android:layout_marginTop="20.0dip" />

            <ImageView
                android:layout_width="45.0dip"
                android:layout_height="50.0dip"
                android:layout_below="@id/control"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5.0dip"
                android:src="@drawable/swipe" />
        </RelativeLayout>

        <TextView
            android:id="@id/btnDone"
            android:layout_width="wrap_content"
            android:layout_height="36.0dip"
            android:layout_gravity="center|right"
            android:layout_marginTop="5.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginBottom="15.0dip"
            android:background="@drawable/piclist_selector_btn_done"
            android:gravity="center"
            android:paddingLeft="30.0dip"
            android:paddingTop="5.0dip"
            android:paddingRight="30.0dip"
            android:paddingBottom="5.0dip"
            android:text="Got It"
            android:textColor="#000"
            android:fontFamily="@font/encode_sans_medium"
            android:textSize="14.0sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>