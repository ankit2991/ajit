<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:navigationBarColor">#6ec6ba</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/close_color</item>
        <item name="android:statusBarColor">@color/colorAccent</item>

    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimaryDark">@color/close_color</item>

        <item name="windowNoTitle">true</item>
        <item name="android:textColor">#ccf1d2</item>
    </style>
    <style name="FullScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
<!--        <item name="android:windowActivityTransitions">true</item>-->
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>

    <style name="rtl_RecyclerTabLayout">
        <item name="rtl_tabBackground">?selectableItemBackground</item>
        <item name="rtl_tabIndicatorColor">?colorAccent</item>
        <item name="rtl_tabIndicatorHeight">2.0dip</item>
        <item name="rtl_tabMaxWidth">50.0dip</item>
        <item name="rtl_tabMinWidth">40.0dip</item>
        <item name="rtl_tabPaddingEnd">6.0dip</item>
        <item name="rtl_tabPaddingStart">6.0dip</item>
        <item name="rtl_tabSelectedTextColor">?android:textColorPrimary</item>
        <item name="rtl_tabTextAppearance">@style/rtl_RecyclerTabLayout.Tab</item>
    </style>
    <style name="rtl_RecyclerTabLayout.Tab" parent="@style/rtl_RecyclerTabLayout">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">true</item>
    </style>


    <style name="SCBSwitch" parent="@style/Theme.AppCompat.Light">
        <item name="android:colorForeground">#c2b1b1b1</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorSwitchThumbNormal">#fff1f1f1</item>
    </style>
    <style name="SeekBaStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">20.0dip</item>
        <item name="android:layout_marginLeft">56.0dip</item>
        <item name="android:layout_marginRight">56.0dip</item>
        <item name="android:progressDrawable">@drawable/custom_progressbar_drawable</item>
        <item name="android:thumb">@drawable/custom_thumb</item>
        <item name="android:splitTrack">false</item>
    </style>

    <style name="TextBelowImage" parent="@android:style/Widget.TextView">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lines">1</item>
    </style>
    <style name="Style_TextView">
        <item name="fontFamily">@font/encode_sans_black</item>
    </style>



    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#000</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#000</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">#9428f8</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:colorAccent">#1b5e20</item>
    </style>
    <style name="Theme.MenClothingPhotoEditor.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:background">@color/close_color</item>
    </style>
    <style name="Theme.MenClothingPhotoEditor.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
