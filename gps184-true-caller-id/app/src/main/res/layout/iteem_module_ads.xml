<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="180dp"
    android:layout_gravity="center"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="7dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/native_bg_big"
        android:orientation="vertical">


        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/img_view"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            app:sriv_left_top_corner_radius="5dp"
            app:sriv_right_top_corner_radius="5dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_view"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/txt_name_app"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="7dp"
                android:layout_toLeftOf="@+id/img_download"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="Magazine"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/img_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/download1"
                android:tint="@color/black" />

        </RelativeLayout>
    </RelativeLayout>

    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/img_view_ads"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:background="@drawable/ad_show" />

    <TextView
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginLeft="2dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center|left"
        android:singleLine="true"
        android:text="AD"
        android:textColor="@android:color/white"
        android:textSize="13sp" />
</androidx.cardview.widget.CardView>

