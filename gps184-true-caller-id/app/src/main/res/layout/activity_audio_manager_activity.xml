<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_container_app"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_size"
        android:background="@drawable/bg_action_bar">

        <ImageView
            android:id="@+id/btnback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_back"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins_bold"
            android:src="@drawable/header"
            android:text="@string/audio_managers"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/ringtone_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_button_outline_gray"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical|center_horizontal|center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ringtone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ringtones"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:textColor="@color/text_menu_button"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/ringtone_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select ringtone"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_42sdp"
                        android:layout_alignTop="@+id/ringtone"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/ic_arrow_next_white"
                        app:tint="#0077B6" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/notification_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_button_outline_gray"
                    android:gravity="center"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical|center_horizontal|center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/notification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notification Tone"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:textColor="@color/text_menu_button"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/notification_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select notification tone"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_42sdp"
                        android:layout_alignTop="@+id/ringtone"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/ic_arrow_next_white"
                        app:tint="#0077B6" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/alarm_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_button_outline_gray"
                    android:gravity="center"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical|center_horizontal|center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/alarm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alarm Tone"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:textColor="@color/text_menu_button"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/alarm_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/alarm"
                            android:layout_alignLeft="@+id/alarm"
                            android:text="Select alarm tone"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_42sdp"
                        android:layout_alignTop="@+id/ringtone"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/ic_arrow_next_white"
                        app:tint="#0077B6" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_button_outline_gray"
                    android:gravity="center"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical|center_horizontal|center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/virb_ring"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:text="Vibrate when ring"
                            android:textColor="@color/text_menu_button"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/vibra_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/virb_ring"
                            android:text="Select to vibrate during ringing"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/virb_ringing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:button="@drawable/bg_checkbox"
                        android:layout_marginEnd="@dimen/_6sdp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/max_ad_native_layout" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>