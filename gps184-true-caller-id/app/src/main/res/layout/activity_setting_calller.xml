<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_container_app"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_size"
        android:background="@drawable/bg_action_bar">

        <ImageView
            android:id="@+id/btnback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_back"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins_bold"
            android:src="@drawable/header"
            android:text="@string/settings"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/callerInfo"
                        android:layout_width="@dimen/size_menu_main"
                        android:layout_height="@dimen/size_menu_main"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_outline_gray"
                        android:clickable="true"
                        android:foreground="?selectableItemBackgroundBorderless"
                        android:gravity="bottom|center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="@dimen/size_icon_menu_main"
                            android:layout_height="@dimen/size_icon_menu_main"
                            android:adjustViewBounds="true"
                            android:src="@drawable/btn_caller_info" />

                        <TextView
                            style="@style/text_menu_main_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Caller Info" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/audioManager"
                        android:layout_width="@dimen/size_menu_main"
                        android:layout_height="@dimen/size_menu_main"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_outline_gray"
                        android:clickable="true"
                        android:foreground="?selectableItemBackgroundBorderless"
                        android:gravity="bottom|center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="@dimen/size_icon_menu_main"
                            android:layout_height="@dimen/size_icon_menu_main"
                            android:adjustViewBounds="true"
                            android:src="@drawable/btn_audio_manages" />

                        <TextView
                            style="@style/text_menu_main_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:singleLine="true"
                            android:text="Audio Manages" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/system_usage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_outline_gray"
                        android:clickable="true"
                        android:foreground="?selectableItemBackgroundBorderless"
                        android:gravity="bottom|center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="@dimen/size_icon_menu_main"
                            android:layout_height="@dimen/size_icon_menu_main"
                            android:adjustViewBounds="true"
                            android:src="@drawable/btn_system_usage" />

                        <TextView
                            style="@style/text_menu_main_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="System Usage" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/deviceInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_outline_gray"
                        android:clickable="true"
                        android:foreground="?selectableItemBackgroundBorderless"
                        android:gravity="bottom|center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="@dimen/size_icon_menu_main"
                            android:layout_height="@dimen/size_icon_menu_main"
                            android:adjustViewBounds="true"
                            android:src="@drawable/btn_device_info" />

                        <TextView
                            style="@style/text_menu_main_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Device Info." />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/after_call_settings"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/bg_button_outline_gray"
                        android:clickable="true"
                        android:foreground="?selectableItemBackgroundBorderless"
                        android:gravity="bottom|center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="@dimen/size_icon_menu_main"
                            android:layout_height="@dimen/size_icon_menu_main"
                            android:adjustViewBounds="true"
                            android:src="@drawable/btn_after_calldorado" />

                        <TextView
                            style="@style/text_menu_main_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="After Call\nScreen Settings" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/max_ad_native_layout" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
