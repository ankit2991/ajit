<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/img_geo_guesser">


   <RelativeLayout
       android:id="@+id/reletiveLayout"
       android:layout_width="0dp"
       app:layout_constraintWidth_percent=".8"
       android:orientation="vertical"
       android:layout_centerInParent="true"
       android:layout_height="@dimen/_250sdp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent">


       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           app:cardBackgroundColor="@color/transpresnt"
           android:elevation="5dp">
       <ImageView
           android:id="@+id/img_promo"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_gravity="center"
           android:scaleType="fitXY"
           android:src="@drawable/bg_geo_guesser"
           android:contentDescription="@string/app_name" />
       </androidx.cardview.widget.CardView>
   </RelativeLayout>

    <ImageView
        android:id="@+id/img_cross"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/reletiveLayout"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="-20dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:src="@drawable/ic_cross_button"
        android:contentDescription="@string/app_name" />
    <Button
        android:id="@+id/btnContinue"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".55"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        android:background="@drawable/bg_try_new"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reletiveLayout"/>

</androidx.constraintlayout.widget.ConstraintLayout>