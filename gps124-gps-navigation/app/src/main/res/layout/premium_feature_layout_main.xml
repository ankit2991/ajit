<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rl_pro_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:minHeight="@dimen/_90sdp"
        android:layout_marginHorizontal="@dimen/_6sdp"
        android:background="@drawable/img_banner_home"
        android:elevation="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        ads:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_premium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center_vertical"
            android:textAllCaps="true"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingStart="@dimen/_8sdp"
            android:text="@string/premium"
            android:textColor="@color/black"
            android:textSize="@dimen/_9ssp"
            android:background="@drawable/bg_white_rounded_15sdp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:gravity="center_vertical"
            android:layout_below="@id/tv_premium"
            android:text="@string/one_tap_away_to_get_faster_to_your_destination"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:layout_below="@id/tv_title"
            android:text="@string/get_unlimited_access_to_maps_amp_routs"
            android:textColor="@color/black"
            android:textSize="@dimen/_9ssp"
            />
        <TextView
            android:id="@+id/tv_journey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:textAllCaps="true"
            android:layout_below="@id/tv_description"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingStart="@dimen/_8sdp"
            android:text="Begin Journey"
            android:textColor="@color/white"
            android:textSize="@dimen/_9ssp"
            android:backgroundTint="@color/green42BB17"
            android:background="@drawable/bg_green_solid_rounded_25sdp"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_toEndOf="@id/tv_journey"
            android:layout_below="@id/tv_description"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/ic_arrow_forward"
            android:layout_height="@dimen/_12sdp"/>

    </RelativeLayout>
</merge>