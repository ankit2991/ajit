<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#54515050</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:text">@string/ad_sponsored</item>
        <item name="android:width">80dp</item>
        <item name="android:height">25dp</item>
    </style>


    <style name="customDialogNative" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">75%</item>
        <item name="android:windowMinWidthMinor">75%</item>
    </style>

    <style name="AppTheme.AdSponsoredCustom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#AAAAAA</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">10sp</item>
        <item name="android:text">@string/ad_sponsored</item>


    </style>

    <style name="AppTheme.AdSponsoredExit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#EEECEC</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:background">@drawable/bg_ads_ad</item>
        <item name="android:text">@string/ad_sponsored</item>


    </style>

    <style name="AppTheme.AdSponsoredMain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#95EEECEC</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">10sp</item>
        <item name="android:text">@string/ad_sponsored</item>


    </style>


    <style name="AppTheme.AdSponsoredMainHistory">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#B0B1B1B1</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">10sp</item>
        <item name="android:text">@string/ad_sponsored</item>


    </style>


    <style name="AppTheme.AdSponsored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textColor">#EEECEC</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/bg_ads_ad</item>
        <item name="android:text">@string/ad_sponsored_list</item>


    </style>

</resources>
