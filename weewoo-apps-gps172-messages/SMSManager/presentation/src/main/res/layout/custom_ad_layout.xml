<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/list_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tools_theme"
        android:paddingTop="@dimen/_3sdp"
        android:paddingBottom="@dimen/_3sdp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:padding="@dimen/_6sdp"
            android:src="@drawable/ic_back_arrow"
            app:tint="@color/white" />

        <com.messaging.textrasms.manager.common.util.CustomFontTextView
            android:id="@+id/toolbarSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/coin_txt"
            android:layout_toRightOf="@+id/back"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:text="Remove Ads"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            app:customFont="@string/fontName" />

        <ImageView
            android:id="@+id/coin"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/coin" />

        <com.messaging.textrasms.manager.common.util.CustomFontTextView
            android:id="@+id/coin_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/coin"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_back_arrow"
            android:text="25"
            android:textColor="@color/white"
            app:customFont="@string/roboto_med" />
    </RelativeLayout>

    <com.messaging.textrasms.manager.common.util.CustomFontTextView
        style="@style/TextPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_toLeftOf="@+id/coin"
        android:padding="@dimen/_5sdp"
        android:text="Collect 100 coins for Ad free Message app"
        android:textSize="@dimen/_13sdp"
        app:customFont="@string/roboto_med" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_3sdp"
        android:background="#C6E1E1E2"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_6sdp"
        android:visibility="gone">


        <com.messaging.textrasms.manager.common.widget.SquareImageView
            android:id="@+id/share_icon"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/messages_app_icon"></com.messaging.textrasms.manager.common.widget.SquareImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/share_btn"
            android:layout_toRightOf="@+id/share_icon"
            android:gravity="start"
            android:orientation="vertical">

            <com.messaging.textrasms.manager.common.util.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_4sdp"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingRight="@dimen/_4sdp"
                android:text="Share app"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                app:customFont="@string/popins" />

            <com.messaging.textrasms.manager.common.util.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_toLeftOf="@+id/install_btn"
                android:layout_toRightOf="@+id/share_icon"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingRight="@dimen/_4sdp"
                android:text="Get 25 coins by share app"
                android:textColor="@color/red"
                android:textSize="@dimen/_10sdp"
                app:customFont="@string/popins" />
        </LinearLayout>

        <Button
            android:id="@+id/share_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/install"
            android:text="Share"
            android:textAllCaps="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_4sdp"
        android:background="#C6E1E1E2"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:padding="@dimen/_6sdp"
        android:visibility="gone">


        <com.messaging.textrasms.manager.common.widget.SquareImageView
            android:id="@+id/watch_icon"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/messages_app_icon">

        </com.messaging.textrasms.manager.common.widget.SquareImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/watch_icon_btn"
            android:layout_toRightOf="@+id/watch_icon"
            android:gravity="start"
            android:orientation="vertical">

            <com.messaging.textrasms.manager.common.util.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_4sdp"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingRight="@dimen/_4sdp"
                android:text="Watch Video"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                app:customFont="@string/popins" />

            <com.messaging.textrasms.manager.common.util.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_toLeftOf="@+id/install_btn"
                android:layout_toRightOf="@+id/share_icon"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingRight="@dimen/_4sdp"
                android:text="Get 25 coins by watching video"
                android:textColor="@color/red"
                android:textSize="@dimen/_10sdp"
                app:customFont="@string/popins" />
        </LinearLayout>

        <Button
            android:id="@+id/watch_icon_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/install"
            android:text="Show"
            android:textAllCaps="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <com.messaging.textrasms.manager.common.util.CustomFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C6E1E1E2"
            android:padding="@dimen/_6sdp"
            android:text="More apps"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            app:customFont="@string/roboto_med" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_15sdp" />/
</LinearLayout>