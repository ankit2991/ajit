<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="?android:attr/itemBackground"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:gravity="start"
        android:orientation="horizontal">


        <com.messaging.textrasms.manager.common.util.CustomFontTextView
            android:id="@+id/tvtab1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/filter_bg"
            android:gravity="start"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingTop="@dimen/_7sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:singleLine="true"
            android:text="Block List"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:visibility="visible"
            app:customFont="@string/roboto_med" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"

        android:gravity="start"
        android:orientation="horizontal">


        <com.messaging.textrasms.manager.common.util.CustomFontTextView
            android:id="@+id/tvtab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/filter_bg_unselect"
            android:gravity="start"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingTop="@dimen/_7sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:singleLine="true"
            android:text="Allow List"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:visibility="visible"
            app:customFont="@string/roboto_med" />
    </LinearLayout>


</LinearLayout>