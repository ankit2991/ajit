<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_ad_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="10dp"
            android:padding="@dimen/_5sdp"
            android:src="?attr/inbox_icon" />

        <com.messaging.textrasms.manager.common.util.CustomFontTextView
            android:id="@+id/app_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/drawer_inbox"
            android:textColor="?attr/drawercolor"
            app:customFont="@string/roboto_bold" />


    </LinearLayout>

    <TextView
        android:id="@+id/ad_txt"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_22sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_toRightOf="@+id/custom_ad_layout"
        android:background="?attr/default_grey"
        android:gravity="center"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"
        android:src="@drawable/arrow"
        android:text="AD"
        android:textColor="?attr/drawercolor"
        android:textSize="@dimen/_10sdp"
        android:visibility="visible" />
</LinearLayout>