<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/notTalkLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/selectNotTalk"
                    android:layout_width="@dimen/_42sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/radio_button"
                    app:tint="@color/tools_theme" />

                <com.messaging.textrasms.manager.common.util.CustomFontTextView
                    android:id="@+id/notTalkText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:paddingLeft="@dimen/_8sdp"
                    android:singleLine="true"
                    android:text="@string/can_not_talk_right_now"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:customFont="@string/roboto_med" />

                <ImageView
                    android:id="@+id/sendNotTalkText"
                    android:layout_width="@dimen/_42sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/send_icon"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/callLaterLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/selectCallLater"
                    android:layout_width="@dimen/_42sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/radio_button"
                    app:tint="@color/tools_theme" />

                <com.messaging.textrasms.manager.common.util.CustomFontTextView
                    android:id="@+id/callLaterText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:paddingLeft="@dimen/_8sdp"
                    android:singleLine="true"
                    android:text="@string/can_call_you_later"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:customFont="@string/roboto_med" />

                <ImageView
                    android:id="@+id/sendCallLaterText"
                    android:layout_width="@dimen/_42sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/send_icon"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/onWayLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/selectOnWay"
                    android:layout_width="@dimen/_42sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/radio_button"
                    app:tint="@color/tools_theme" />

                <com.messaging.textrasms.manager.common.util.CustomFontTextView
                    android:id="@+id/onWayText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:paddingLeft="@dimen/_8sdp"
                    android:singleLine="true"
                    android:text="@string/i_am_on_my_way"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:customFont="@string/roboto_med" />

                <ImageView
                    android:id="@+id/sendOnWayText"
                    android:layout_width="@dimen/_42sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/send_icon"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sendLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_42sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:padding="@dimen/_12sdp"
                    android:src="@drawable/ic_edit_white"
                    app:tint="@color/black" />

                <com.messaging.textrasms.manager.common.widget.QkEditText
                    android:id="@+id/messageText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:hint="@string/write_personal_message"
                    android:padding="@dimen/_8sdp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_border"
                    android:textSize="14sp"
                    app:customFont="@string/roboto_med" />

                <ImageView
                    android:id="@+id/sendMesssage"
                    android:layout_width="@dimen/_42sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/send_icon"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</layout>