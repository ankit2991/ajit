<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/sort_img"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toLeftOf="@+id/sort_txt"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_google_play" />

            <com.messaging.textrasms.manager.common.widget.QkTextView
                android:id="@+id/sort_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Google Play"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/sorting_dialog_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10sdp">


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="#1f000000" />


            <com.messaging.textrasms.manager.common.widget.QkTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:drawableLeft="@drawable/ic_order"
                android:drawablePadding="@dimen/_6sdp"
                android:drawableTint="?android:attr/textColorSecondary"
                android:gravity="start"
                android:padding="@dimen/_10sdp"
                android:text="Order By "
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <com.messaging.textrasms.manager.common.widget.QkTextView
                    android:id="@+id/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/_2sdp"
                    android:padding="@dimen/_5sdp"
                    android:text="Please download our latest version of Message app from playstore."
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="@dimen/_14sdp" />


            </LinearLayout>

            <com.messaging.textrasms.manager.common.util.CustomFontTextView
                android:id="@+id/redirect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/tools_theme"
                android:gravity="center"
                android:paddingLeft="@dimen/_35sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingRight="@dimen/_35sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="Download"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>