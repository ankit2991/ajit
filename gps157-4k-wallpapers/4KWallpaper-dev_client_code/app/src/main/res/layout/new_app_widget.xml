<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/Widget.4KWallpaperdev_germany_adx.AppWidget.Container"
    android:theme="@style/AppTheme.AppWidgetContainer">
<!--    style="@style/Widget.4KWallpaperdev_germany_adx.AppWidget.Container"-->

    <ImageView
        android:id="@+id/appwidget_text"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:src="@mipmap/ic_app" />

    <ImageView
        android:layout_centerVertical="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@id/appwidget_text"
        android:id="@+id/change_back"
        android:src="@mipmap/change_wall"
        android:contentDescription="@string/change"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

</RelativeLayout>