<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="@dimen/dialog_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView

            android:id="@+id/txt_dialog_title"
            android:layout_width="wrap_content"
            android:fontFamily="@font/baloobhai"
            android:layout_height="wrap_content"
            android:textColor="@color/dialog_title_color"
            android:textSize="@dimen/dialog_title_size"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_dialog_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloobhai"
            android:layout_marginTop="@dimen/dialog_margin_top"
            android:textColor="@color/dialog_title_color"
            android:textSize="@dimen/dialog_subtitle_size"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialog_margin_top">

            <TextView
                android:id="@+id/btn_dialog_positive"
                android:layout_width="wrap_content"
                android:fontFamily="@font/baloobhai"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/submit_selector"
                android:paddingLeft="@dimen/dialog_padding_left_right"
                android:paddingTop="@dimen/dialog_padding_top_bottom"
                android:paddingRight="@dimen/dialog_padding_left_right"
                android:paddingBottom="@dimen/dialog_padding_top_bottom"
                android:text="@string/label_ok"
                android:textColor="@color/white"
                android:textSize="@dimen/dialog_button_size" />

            <TextView
                android:id="@+id/btn_dialog_negative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/baloobhai"
                android:background="@drawable/submit_selector"
                android:paddingLeft="@dimen/dialog_padding_left_right"
                android:paddingTop="@dimen/dialog_padding_top_bottom"
                android:paddingRight="@dimen/dialog_padding_left_right"
                android:paddingBottom="@dimen/dialog_padding_top_bottom"
                android:textColor="@color/white"
                android:textSize="@dimen/dialog_button_size"
                android:visibility="visible" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
