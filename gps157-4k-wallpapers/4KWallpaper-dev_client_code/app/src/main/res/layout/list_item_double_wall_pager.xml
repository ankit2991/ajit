<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/rl_photos"
            android:layout_width="@dimen/double_wall_width"
            android:layout_height="@dimen/double_wall_hight"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/double_content_padding">

                <RelativeLayout
                    android:id="@+id/ll_img2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/double_bottom_to_top_bg_gradiant"
                        android:rotation="180"></View>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/double_bottom_to_top_bg_gradiant"></View>

                    <TextView
                        android:id="@+id/txt_date2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="42dp"
                        android:shadowColor="@color/text_shadow"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="16sp"/>

                    <LinearLayout
                        android:id="@+id/llPreviewApp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/bottom"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/detail_icon_height_double"
                            android:layout_weight="1"
                            android:src="@mipmap/ic_launcher_round" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/detail_icon_height_double"
                            android:layout_weight="1"
                            android:src="@mipmap/ic_preview_gallery" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/detail_icon_height_double"
                            android:layout_weight="1"
                            android:src="@mipmap/ic_preview_itune" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/detail_icon_height_double"
                            android:layout_weight="1"
                            android:src="@mipmap/ic_preview_photo" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/detail_icon_height_double"
                            android:layout_weight="1"
                            android:src="@mipmap/ic_preview_flick"
                            android:visibility="gone" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:src="@mipmap/ic_dash"></ImageView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ll_img1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/img_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/double_bottom_to_top_bg_gradiant"
                        android:rotation="180"></View>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/double_bottom_to_top_bg_gradiant"></View>

                    <LinearLayout
                        android:id="@+id/ll_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/txt_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="@color/text_shadow"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2"
                            android:textColor="@color/white"
                            android:textSize="40sp"></TextView>

                        <TextView
                            android:id="@+id/txt_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="@color/text_shadow"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="13sp"></TextView>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:background="@mipmap/ic_lock"></ImageView>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="4dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="10dp" android:visibility="gone"
                        android:layout_height="10dp"
                        android:layout_marginRight="2dp"
                        android:src="@mipmap/ic_vibration"></ImageView>

                    <ImageView
                        android:layout_width="10dp" android:visibility="gone"
                        android:layout_height="10dp"
                        android:layout_marginRight="2dp"
                        android:src="@mipmap/ic_wifisignal"></ImageView>

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginRight="2dp"
                        android:src="@mipmap/ic_battery"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:text="90%"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:textStyle="bold"></TextView>
                </LinearLayout>



            </RelativeLayout>

            <ImageView
                android:id="@+id/img_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/ic_phone"
                android:scaleType="centerCrop" />


            <fr.castorflex.android.circularprogressbar.CircularProgressBar
                android:id="@+id/layout_loading"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:indeterminate="true"
                style="@style/CircularThemeProgressBar_centre"
                android:visibility="gone" />

        </RelativeLayout>

        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloobhai"
            android:layout_below="@+id/ll_terms"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" android:layout_marginBottom="16dp"
            android:background="@drawable/submit_selector_double"
            android:paddingLeft="12dp" android:paddingTop="6dp" android:paddingBottom="6dp"
            android:paddingRight="12dp" android:textAllCaps="false"
            android:text="@string/set_double"
            android:textColor="?attr/my_textColor"
            android:textSize="13sp" />

    </LinearLayout>
</RelativeLayout>
