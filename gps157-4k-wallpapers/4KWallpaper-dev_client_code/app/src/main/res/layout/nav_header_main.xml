<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_header"
    android:layout_width="match_parent"
    android:layout_height="120dp"

    android:layout_marginLeft="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="8dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center">

        <ImageView
            android:id="@+id/nav_header_imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:src="@mipmap/ic_launcher" />

        <RelativeLayout android:layout_gravity="bottom"
            android:layout_width="match_parent" android:layout_toRightOf="@+id/nav_header_imageView"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"

            >

            <TextView
                android:id="@+id/nav_header_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="?attr/my_textColor"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/nav_header_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloobhai"
                android:layout_below="@id/nav_header_textView"
                android:text="@string/free_hd_wallpaper"
                android:textColor="?attr/my_textColor"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
