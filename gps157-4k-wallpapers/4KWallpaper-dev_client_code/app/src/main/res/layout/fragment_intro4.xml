<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="false"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/mi_baseline">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/intro_witdh" android:id="@+id/card_view"
        android:layout_height="@dimen/intro_hieght"
        android:layout_marginBottom="@dimen/mi_baseline"
        app:cardCornerRadius="@dimen/card_radius">
        <RelativeLayout
            android:id="@+id/rl_photos"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:scaleType="centerCrop" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mi_baseline"
        android:fontFamily="@font/baloobhai"
        android:gravity="center"
        android:text="@string/title_material_shadow"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mi_baseline"
        android:autoLink="web"
        android:gravity="center" android:fontFamily="@font/baloobhai"
        android:lineSpacingMultiplier="1.25"
        android:linksClickable="true"
        android:text="@string/description_material_shadow"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/white" />

</LinearLayout>